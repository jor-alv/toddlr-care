<div class="container form my-5">
  <h1>Edit Profile</h1>
  <%= simple_form_for(@user, :url => my_profile_path, :method => :patch) do |f| %>
    <% if @user.category == "supplier" %>
      <%= f.input :company_name %>
    <% else %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
    <% end %>
    <%= f.input :email %>
    <%= f.input :bio %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
      <%= f.submit "Edit Profile", class: "btn btn-primary confirm-btn" %>
  <% end %>
  <br>
</div>
